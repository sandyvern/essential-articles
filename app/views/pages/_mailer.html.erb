 <div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
        <%= simple_form_for @contact do |f| %>
        <%= f.input :name, label: false, placeholder: "Name" %>
        <%= f.input :email, label: false, placeholder: "E-mail" %>
        <%= f.input :message, label: false, placeholder: "Message" %>
        <%= f.submit "Get in touch!", class: "btn btn-info" %>
        <% end %>
    </div>
  </div>
</div>