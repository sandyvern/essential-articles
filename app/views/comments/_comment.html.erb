<div class="media">
    <div class="pull-left">
        
        <strong><%= comment.user.username %></strong><br>
        <%= image_tag comment.user.image.url(:thumb), class: "img-circle" %>
        
    </div>
    <div class="media-body">
        <p class="media-heading pull-right">
          <%= time_ago_in_words(comment.created_at) %>
        </p><br />
        <%= comment.body %>
       
    </div>
</div>


	<%= link_to "Edit", edit_article_comment_path(comment.article, comment) %>

<%= link_to "Delete", [comment.article, comment], method: :delete, data: { confirm: "Are you sure?" } %>